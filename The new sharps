# Now to add puttins:
root = tk.Tk()
frame = tk.Frame(root)
frame.pack()

# Auit button
button = tk.Button(frame, 
                   text="        QUIT       ", 
                   fg="red",
                   command=quit)
button.pack(side=tk.BOTTOM)

# Clef button
button = tk.Button(frame,
                   text="         Clef        ",
                   fg="black",
                   command=Answer_Key)
button.pack(side=tk.BOTTOM)

# How to Play 
button = tk.Button(frame,
                   text=" How To Play ",
                   fg="brown",
                   command=how_to_play)
button.pack(side=tk.BOTTOM)

# Start
button = tk.Button(frame,
                   text="        Start       ",
                   fg="green",
                   command=Clefs)
button.pack(side=tk.BOTTOM)

# Loop to keep the buttons on screen
root.mainloop()






