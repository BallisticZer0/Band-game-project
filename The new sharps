    print("|     O F                           |")
    print("|-O-E--- --- --- --- --- --- --- ---|")
    print("|___________________________________|\n\n")
    print("             Treble Clef")


    print(".")
    print(" ___________________________________")
    print("|                                  F|")
    print("|--- --- --- --- --- --- --- --- -A-|")
    print("|                             O G   |")
    print("|--- --- --- --- --- --- -O-F--- ---|")
    print("|                     O E           |")
